{
  "printWidth": 100,
  "parser": "typescript",
  "singleQuote": true,
  "arrowParens": "always",
  "tabWidth": 2,
  "semi": true,
  "trailingComma": "all",
  "overrides": [
    {
      "files": ["**/*.json"],
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": "**/*.json",
      "options": {
        "parser": "json"
      }
    }
  ]
}
